#!/usr/bin/env bash

# Update Homebrew
brew update

# Install NodeJS and NPM
brew install node

# Install JDK 8
brew tap caskroom/versions
brew cask install adoptopenjdk8

# Install Maven
brew install maven

# Install Docker
brew cask install docker

echo
echo "Starting Docker..."
echo "Docker will ask you for privileged access. Click Confirm."
echo "Once you've done this, return here to continue setup."
open /Applications/Docker.app
read -p "Press enter to continue..."